{
  "name": "voidauth",
  "main": "server/index.ts",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "concurrently \"npm run server:watch\" \"npm run frontend:watch\"",
    "start:server": "tsx --env-file-if-exists=.env server/index.ts",
    "server:watch": "nodemon --ext \"ts,js,json\" --watch server/ --watch shared/ --exec \"tsc && tsx --env-file-if-exists=.env server/index.ts\"",
    "frontend:watch": "cd frontend && npm run watch",
    "postinstall": "husky"
  },
  "author": "Derek Paschal",
  "license": "SEE LICENSE IN LICENSE FILE",
  "lint-staged": {
    "*": "eslint --fix"
  },
  "dependencies": {
    "@angular/cli": "^19.2.9",
    "@angular/material": "^19.2.11",
    "@zxcvbn-ts/core": "^3.0.4",
    "@zxcvbn-ts/language-common": "^3.0.4",
    "@zxcvbn-ts/language-en": "^3.0.2",
    "argon2": "^0.43.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "generate-password": "^1.7.1",
    "helmet": "^8.1.0",
    "husky": "^9.1.7",
    "jose": "^6.0.10",
    "keygrip": "^1.1.0",
    "knex": "^3.1.0",
    "nodemailer": "^6.10.1",
    "oidc-provider": "^9.1.1",
    "pg": "^8.16.0",
    "psl": "^1.15.0",
    "pug": "^3.0.3",
    "sass": "^1.86.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.3",
    "@types/nodemailer": "^6.4.17",
    "@types/oidc-provider": "^9.1.0",
    "@types/psl": "^1.1.3",
    "@types/pug": "^2.0.10",
    "concurrently": "^9.1.2",
    "eslint": "^9.25.1",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.10",
    "typescript-eslint": "^8.31.1"
  }
}
